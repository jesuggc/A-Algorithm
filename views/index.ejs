<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script> 
  </head>
  <body>
    <div class="bg-info">
      <form method="POST" action="/simulator">
        <h1>Elige el tama√±o de la cuadricula</h1>
        <input id="ancho" min="3" max="20" type="range" step="1" name="ancho"/>
        <input id="alto" min="3" max="20" type="range" step="1" name="alto"/>
        <h1 id="textoancho"></h1>
        <h1 id="textoalto"></h1>
        <input id="inner" type="hidden" name="inner">
        <input id="enviar" type="submit" value="Enviar"/>
      </form>
    </div>
  </body>
  <script>
    
    $("#inner").val(window.innerHeight)
    $("#alto").on("input", function(){
      $("#textoalto").empty().append("Alto: " + $("#alto").val())
    })

    $("#ancho").on("input", function(){
      $("#textoancho").empty().append("Ancho: " + $("#ancho").val())
    })

    $("#ancho").data("id", window.innerHeight);
    $("#alto").data("id", window.outerHeight);
    $("#enviar").on("click", function() {
      let datos = {
        ancho: $("#ancho").val(),
        alto: $("#alto").val(),
        inner: window.innerHeight,
        outer: window.outerHeight
      }
      $.ajax({
        url: '/simulator',
        method: 'GET',
        data: datos,
        success: function(respuesta) {
                window.location.href = '/prueba';
            }
      });
    });

    
  </script>  
</html>
